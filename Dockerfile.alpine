# vim: set filetype=dockerfile :
# docker inspect --format='{{index .RepoDigests 0}}' alpine:latest
FROM alpine@sha256:3c7497bf0c7af93428242d6176e8f7905f2201d8fc5861f45be7a346b5f23436

COPY ./muffle-env /bin/muffle-env

# hadolint ignore=DL3018
RUN chmod +x /bin/muffle-env && \
    apk --no-cache add \
        git perl ca-certificates curl \
        openssh-client rsync \
        && rm -rf /var/cache/apk/*

ENTRYPOINT ["/bin/sh"]
